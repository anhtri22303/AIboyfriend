<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Ứng dụng bạn trai ảo với trí tuệ nhân tạo, cho phép bạn tùy chỉnh và trò chuyện"
    />
    <title>Bạn Trai Ảo AI</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <div class="app-container">
      <div class="chat-container">
        <div class="chat-header">
          <div class="profile-info">
            <div class="avatar-container">
              <img
                src="/assets/avatar.jpg"
                alt="<%= boyfriend.name %>"
                class="avatar"
              />
              <span class="status-indicator"></span>
            </div>
            <div class="user-info">
              <h2><%= boyfriend.name %></h2>
              <p class="status">Online</p>
            </div>
          </div>
          <div class="header-actions">
            <div class="context-selector">
              <select id="context-mode" class="context-mode-select">
                <option value="default">Chế độ thường</option>
                <option value="astrology">Phân tích bản đồ sao</option>
                <option value="tarot">Đọc bài Tarot</option>
                <option value="psychology">Tư vấn tâm lý</option>
              </select>
            </div>
            <button id="settings-btn" class="icon-button" aria-label="Settings">
              <i class="fas fa-cog"></i>
            </button>
          </div>
        </div>
        
        <div id="chat-messages" class="chat-messages">
          <!-- Chat messages will be dynamically added here -->
        </div>
        
        <div class="chat-input-container">
          <div class="image-preview-container">
            <img src="" alt="Preview" class="image-preview">
            <button class="remove-image-btn">×</button>
          </div>
          <div class="input-wrapper">
            <div class="image-upload-container">
              <button id="image-upload-button" class="image-upload-button">
                <i class="fas fa-image"></i>
              </button>
              <input type="file" id="image-upload" class="image-upload-input" accept="image/jpeg, image/png, image/gif">
            </div>
            <input
              type="text"
              id="user-message"
              placeholder="Nhập tin nhắn của bạn..."
            />
            <button id="send-message" class="send-button">
              <i class="fas fa-paper-plane"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Configuration Modal -->
    <div id="config-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Cấu Hình Người Bạn Trai</h2>
          <button class="close-modal" aria-label="Close">&times;</button>
        </div>
        
        <form id="config-form">
          <div class="form-group">
            <label for="avatar">URL Ảnh Đại Diện:</label>
            <input
              type="url"
              id="avatar"
              name="avatar"
              value="<%= boyfriend.avatar %>"
              placeholder="Nhập URL ảnh đại diện"
            />
          </div>
          
          <div class="form-group">
            <label for="name">Tên:</label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= boyfriend.name %>"
              placeholder="Nhập tên của anh ấy"
            />
          </div>
          
          <div class="form-group">
            <label for="age">Tuổi:</label>
            <input
              type="number"
              id="age"
              name="age"
              value="<%= boyfriend.age %>"
              placeholder="Nhập tuổi của anh ấy"
            />
          </div>
          
          <div class="form-group">
            <label for="personality">Tính Cách:</label>
            <div id="personality-tags" class="tag-list">
              <% boyfriend.personality.split(',').forEach(function(trait) { if
              (trait.trim()) { %>
              <div class="tag">
                <%= trait.trim() %>
                <span class="remove-tag">&times;</span>
              </div>
              <% } }) %>
            </div>
            <div class="tag-input-wrapper">
              <input
                type="text"
                id="personality-input"
                class="tag-input-field"
                placeholder="Thêm tính cách"
              />
              <button type="button" class="add-tag-btn">
                <i class="fas fa-plus"></i>
              </button>
            </div>
          </div>
          
          <div class="form-group">
            <label for="interests">Sở Thích:</label>
            <div id="interests-tags" class="tag-list">
              <% boyfriend.interests.forEach(function(interest) { %>
              <div class="tag">
                <%= interest %>
                <span class="remove-tag">&times;</span>
              </div>
              <% }) %>
            </div>
            <div class="tag-input-wrapper">
              <input
                type="text"
                id="interests-input"
                class="tag-input-field"
                placeholder="Thêm sở thích"
              />
              <button type="button" class="add-tag-btn">
                <i class="fas fa-plus"></i>
              </button>
            </div>
          </div>
          
          <button type="submit" class="save-config-btn">Lưu Cấu Hình</button>
        </form>
      </div>
    </div>

    <!-- Add image modal for fullscreen view -->
    <div id="image-modal" class="image-modal">
      <button class="close-image-modal">&times;</button>
      <img class="fullscreen-image" src="" alt="Fullscreen image">
    </div>

    <!-- Trong phần hiển thị tin nhắn -->
    <div id="messageTemplates" style="display: none;">
      <!-- User message template -->
      <div class="message-container user-message">
        <div class="message"></div>
        <div class="message-time"></div>
      </div>
      
      <!-- AI message template -->
      <div class="message-container ai-message">
        <div class="message"></div>
        <div class="message-time"></div>
      </div>
    </div>

    <script>
      // Thêm đoạn này vào phần script để xử lý HTML trong tin nhắn
      function displayMessage(message, sender, time, imageUrl = null) {
        const isUser = sender === 'User';
        const messageContainer = document.createElement('div');
        messageContainer.className = `message-container ${isUser ? 'user-message' : 'ai-message'}`;
        
        const messageContent = document.createElement('div');
        messageContent.className = 'message';
        
        // Kiểm tra nếu tin nhắn chứa HTML (astrology mode)
        if (!isUser && message.includes('<div class="astrology-message">')) {
          messageContent.innerHTML = message;
        } else {
          messageContent.innerHTML = message.replace(/\n/g, '<br>');
        }
        
        // Thêm hình ảnh nếu có
        if (imageUrl) {
          const img = document.createElement('img');
          img.src = imageUrl;
          img.className = 'message-image';
          messageContainer.appendChild(img);
        }
        
        messageContainer.appendChild(messageContent);
        
        const messageTime = document.createElement('div');
        messageTime.className = 'message-time';
        messageTime.textContent = new Date(time).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        messageContainer.appendChild(messageTime);
        
        document.getElementById('chat-messages').appendChild(messageContainer);
        scrollToBottom();
      }
    </script>

    <script src="/js/chat.js"></script>
  </body>
</html>
